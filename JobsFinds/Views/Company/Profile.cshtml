@model JobsFinds.Models.User
@{
	Layout = "_LayoutCompany";
	ViewData["Title"] = "Update Info";
}

<h1 class="text-center mt-4 mb-4">Update Info</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="text-transform:capitalize;" asp-for="image" class="control-label"></label>
                <input asp-for="image" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center mt-4 mb-4">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}